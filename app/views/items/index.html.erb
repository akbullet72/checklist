<% if user_signed_in? %>
	<div class="col-md-6 col-md-offset-3">
		<% @items.each do |item| %>


			<% if item.completed? %>
				<div class="row item">
					<div class="col-md-8">
						<h2><p style="opacity: 0.4;"><strike><%= link_to item.title, item %></strike></p></h2>
						<p style="opacity: 0.4;"><%= item.description %></p>		
					</div>
					<div class="col-md-2">
						<%= link_to complete_item_path(item), method: :patch do %>
							<i style="opacity: 0.4;" class="fa fa-check"></i>
						<% end %>
					</div>	
					<div class="col-md-2">
						<%= link_to item, method: :delete, data: { confirm: "Are You Sure?" } do %>
						<i style="opacity: 0.4;" class="fa fa-trash"></i>
						<% end %>	
					</div>
				</div>

			<% else %>
				<div class="row item">
					<div class="col-md-8">
						<h2><p><%= link_to item.title, item %></p></h2>
						<p><%= item.description %></p>
					</div>
					<div class="col-md-2">
						<%= link_to complete_item_path(item), method: :patch do %>
						<i class="fa fa-check"></i>
						<% end %>
					</div>		
					<div class="col-md-2">
						<%= link_to item, method: :delete, data: { confirm: "Are You Sure?" } do %>
						<i class="fa fa-trash"></i>
						<% end %>	
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
<% else %>
	<%= render 'layouts/static_landing_page' %>
<% end %>

